<!DOCTYPE html>
<html>
    <head>
        <%- include('../partials/head') %>
        <link rel="stylesheet" href="/css/stylesheet.css">


    </head>
    <body>
        <header>
            <%- include('../partials/header') %>
        </header>
       



        <div class="container">
            <h1> Register New Account </h1>
        
                <% if (msg != undefined) { %>         
                     <div >
                        <h3> Error: <%= msg %></h3> 
                    </div>
                <% } %>
            <form id="signupForm" action="/auth/signup" method="post">
                <div class="form-group">
                    <label for="username"><b>Username</b></label>
                    <input type="text" id="username" name="username" required>
                </div>
            
        

                <div class="form-group">
                    <label for="email"> Email </label>
                    <input type="email" id="email" name="email" required>
                </div>

                <div class="form-group">
                    <label for="password"><b> Password</b></label>
                    <input type="password" id="password" name="password" required>
                    <div class="password-hint">
                        <ul>
                            <li id="length">Password must be at least 8 characters long</li>
                            <li id="uppercase">At least one uppercase letter</li>
                            <li id="lowercase">At least one lowercase letter</li>
                            <li id="number">At least one number</li>
                            <li id="special">At least one special character</li>
                        </ul>
                        <span id="passwordError" class="error"></span>
                        <div class="password-strength" id="passwordStrength"></div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="confrimPassword"><b>Confrim Password </b> </label>
                    <input type="password" id="confrimPassword" name="reqPassword" required>
                    <span id="confirmPasswordError" class="error"></span>
                    <button type="submit"> Sign-Up !</button>
                </div>
            </form>
            <p id="message"></p>
        </div>
        <script src="/js/scripts.js/"></script>
        <footer>
            <%- include('../partials/footer');%>
        </footer>
        
    </body>
</html>
